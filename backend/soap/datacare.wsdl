<?xml version="1.0"?>
<definitions name="DataCareService"
    targetNamespace="http://datacare.com/soap"
    xmlns:tns="http://datacare.com/soap"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">

    <!-- MENSAJES -->
    <message name="SumarRequest">
        <part name="a" type="xsd:int"/>
        <part name="b" type="xsd:int"/>
    </message>

    <message name="SumarResponse">
        <part name="resultado" type="xsd:int"/>
    </message>

    <message name="ValidarRequest">
        <part name="nombre" type="xsd:string"/>
    </message>

    <message name="ValidarResponse">
        <part name="valido" type="xsd:boolean"/>
    </message>

    <!-- PORT TYPE -->
    <portType name="DataCarePortType">
        <operation name="sumar">
            <input message="tns:SumarRequest"/>
            <output message="tns:SumarResponse"/>
        </operation>
        <operation name="validar">
            <input message="tns:ValidarRequest"/>
            <output message="tns:ValidarResponse"/>
        </operation>
    </portType>

    <!-- BINDING -->
    <binding name="DataCareBinding" type="tns:DataCarePortType">
        <soap:binding style="rpc"
            transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="sumar">
            <soap:operation soapAction="sumar"/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
        </operation>
        <operation name="validar">
            <soap:operation soapAction="validar"/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
        </operation>
    </binding>

    <!-- SERVICE -->
    <service name="DataCareService">
        <documentation>Servicio SOAP de ejemplo</documentation>
        <port name="DataCarePort" binding="tns:DataCareBinding">
            <soap:address location="http://localhost:8001/wsdl"/>
        </port>
    </service>

</definitions>
